{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "useDefineForClassFields": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "module": "esnext",
    "paths": {
      "@/*": ["src/*"],
      "@styles/*": ["src/styles/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@components/ui": ["src/components/ui"],
      "@components/ui/*": ["src/components/ui/*"]
    },
    "types": ["vite/client"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  },
  "files": ["vite-env.d.ts"],
  "include": ["src"],
  "references": [{ "path": "./tsconfig.playground.json" }, { "path": "./tsconfig.node.json" }]
}
