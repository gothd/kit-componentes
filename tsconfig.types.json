{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "rootDir": "src/components",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@utils": ["dist/utils"],
      "@utils/*": ["dist/utils/*"]
    }
  },
  "include": ["dist/utils", "src/components/**/*"],
  "exclude": ["node_modules", "**/*.web.tsx"]
}
